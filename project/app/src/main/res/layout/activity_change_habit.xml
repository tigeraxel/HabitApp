<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeHabitActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/create_fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/change_change_button"/>

    <Button
        android:id="@+id/change_change_button"
        android:layout_width="268dp"
        android:layout_height="74dp"
        android:layout_margin="10dp"
        android:text="@string/change_change_habit_button_text"
        app:layout_constraintBottom_toTopOf="@id/create_delete_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/create_delete_button"
        android:layout_width="268dp"
        android:layout_height="74dp"
        android:layout_margin="10dp"
        android:text="@string/change_delete_habit_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>