<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sestudentjuhabitapp">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SestudentjuHabitApp">
        <activity
            android:name=".createAccountActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:exported="false" />
        <activity
            android:name=".ChallengeActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:exported="false" />
        <activity
            android:name=".ChangeHabitActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:exported="false" />
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:exported="false" />
        <activity
            android:name=".NewHabitActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:exported="false" />
        <activity
            android:name=".SignInActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CalenderActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>